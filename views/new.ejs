<%- include('partials/header') %>
<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form action="/blogs" method="post" class="ui form">
    <div class="field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" placeholder="title" />
    </div>
    <div class="field">
      <label for="">Image</label>
      <input type="text" name="blog[image]" placeholder="image" />
    </div>
    <div class="field">
      <label for="">Blog content</label>
      <textarea name="blog[body]" cols="30" rows="10" required></textarea>
    </div>
    <input type="submit" value="Submit" class="ui inverted button violet" />
  </form>
</div>
<%- include('partials/footer') %>
