<%- include('partials/header') %>
<div class="ui main container text segment">
  <div>
    <h2 class="ui header">
      <%= blog.title %>
    </h2>
  </div>
  <div class="ui top attached">
    <div class="item">
      <img
        class="ui centered rounded image"
        src="<%= blog.image %> "
        alt=""
        srcset=""
      />
      <div class="content">
        <span><%= blog.created.toDateString() %> </span>
      </div>
      <!-- evaluates the code and uses html tags -->
      <!-- dangerous without a sanitizer -->
      <p><%- blog.body %></p>
      <a href="/blogs/<%= blog._id %>/edit" class="button lightblue ui basic"
        >Edit</a
      >
      <form
        id="delete"
        action="/blogs/<%= blog._id %>?_method=DELETE"
        method="post"
      >
        <button class="ui basic button red">Delete</button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
