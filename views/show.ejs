<%- include('partials/header') %>
<div class="ui main container text segment">
  <div class="huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img
        class="ui centered rounded image"
        src="<%= blog.image %> "
        alt=""
        srcset=""
      />
      <div class="content">
        <span><%= blog.created.toDateString() %> </span>
      </div>
      <!-- evaluates the code and uses html tags -->
      <!-- dangerous without a sanitizer -->
      <p><%- blog.body %></p>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
